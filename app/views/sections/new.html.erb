<%= link_to("<< Back to List", sections_path, :class => 'back-link') %>

<div class="sections new">
  <h2>Create Section</h2>

  <!--Using the form_for function we dont have to specify the url and method it does this automatically -->
  <%= form_for(@section) do |f| %>

    <%= render(:partial => 'form', :locals => {:f => f}) %>

    <div class="form-buttons">
      <%= f.submit("Create Section") %>
    </div>

  <% end %>
</div>
